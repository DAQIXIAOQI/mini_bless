.container {
  width: 100%;
 
  position: relative;
}
.img-box {
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: lightblue;
}
.img-box imgBox {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 1;
}
.img-box text {
   background: lightcoral;
   display: inline-block;
   position: relative;
   z-index: 2;
}
.bt-text {
  overflow:hidden;
  width: 100%;
}


/*业务逻辑  */
.cart .img-box{
   border-radius: 10rpx;
   overflow: hidden;
}
.cart .bt-text {
   height: 60rpx;
}
.cart .bt-text .title {
  color:#222222;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 35rpx;
}
.cart .bt-text .left-text,.cart .bt-text .right-text {
  display: inline-block;
  font-size: 30rpx;
  max-width: 50%;
  height: 60rpx;
  line-height: 60rpx;
  overflow: hidden;
}
.cart .bt-text .left-text {
  color:#f67f7f;
  overflow: hidden;
  float: left;
}
.cart .bt-text .right-text{
  color:#929292;
  max-width: 40%;
  margin-left: 10%;
}

.cart.cartb  .bt-text .left-text  {
   color:#222222;
}

