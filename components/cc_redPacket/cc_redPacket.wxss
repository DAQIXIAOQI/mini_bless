.container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  left: 0;
  z-index: 22;
  right: 0;
  font-size: 33rpx;
  opacity: 0;
  transform: translateY(20%);
  visibility: hidden;
  transition: all linear 0.2s ;
  background-color: #f5f5f5;
}
.container.show {
  opacity: 1 ;
  transform: translateY(0);
  visibility: visible;
}
.user-input {
  margin: 5vw;
  position: relative;
}
.user-input .box {
   padding: 0 30rpx;
   background-color: white;
   border-radius: 3rpx;
   height: 100rpx;
   line-height: 100rpx;
   position: relative;
   margin-bottom: 3vh;
   overflow: hidden;
}
.user-input .box:last-child {
  margin-bottom: 0;
}
.user-input .box .value {
  display: inline-block;
  position: absolute;
  top: 0;
  right: 60rpx;
  text-align: right;
  height: 100%;
   
}
.user-input .box .unit {
  position: absolute;
  color: #929292;
  width: 30rpx;
  top: 0;
  right: 30rpx;
}
.total {
  display: flex;
  text-align: center;
  align-items: center;
  height: 150rpx;
  justify-content: center;
  font-size: 60rpx;
}
.submit {
    margin:30rpx 5vw;
    background-color: #f4af9c;
    color: #fbe0da;
    
}
.cancel {
  background-color: #e9e9e9;
  color:white;
}
.submit.cur {
  background-color: #f0695b;
  color: white;
}
.notice {
  position: absolute;
  bottom:30rpx;
  width: 100%;
  text-align: center;
  font-size: 30rpx;
  color:#8e8e8e;
}