.list-container {
  position: fixed;
  width: 100vw;
  height: 100vh;
  left: 0;
  z-index: 22;
  right: 0;
  font-size: 33rpx;
  opacity: 0;
  transform: translateY(20%);
  visibility: hidden;
  transition: all linear 0.2s ;
  background-color: white;
}
.list-container.show {
  opacity: 1 ;
  transform: translateY(0);
  visibility: visible;
}

.top {
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  overflow: hidden;
  text-align: center;
  border: 1px solid lightgray;
  border-width: 1px 0;
  color: gray;
  background: white;
  position: relative;
  z-index: 2;
}

.top text {
  float: left;
  width: 10%;
  display: inline-block;
  height: 100%;
  border-right: 1px solid lightgray;
  margin-left: -1px;
}

.top .tabs {
  margin-left: 10%;
  width: 90%;
  height: 100%;
  display: flex;
  white-space: nowrap;
}

.top .tabs-item {
  flex-grow: 1;
  min-width: 120rpx;
  height: 100%;
  display: inline-block;
}
.top .tabs-item.hover {
  color: red;
}

.content {
  width: 100%;
  height: 100%;
  margin-top: -70rpx;
}

.content .item {
  width: 94%;
  max-height: 100rpx;
  border-bottom: 1px solid lightgray;
  padding: 15rpx 3%;
}
.content .item.hover {
  background: #eee;
}
.content .item-box {
  padding-top: 70rpx;

}

.content .item .item-text {
  max-height: 80rpx;
  line-height: 40rpx;
    display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  color:gray;
}
