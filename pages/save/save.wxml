      </view>
       <view class='right'>5<text class='iconfont icon-fenxiang-tianchong'></text></view>
    </view>
     <view class=' items'>
      <view class='left'>
        <text class='iconfont icon-liuyan1'></text>
      </view>
      <view class='main'>
        <text>祝福留言</text>
      </view>
         <view class='right'>5<text class='iconfont icon-fenxiang-tianchong'></text></view>
    </view>
    <view class=' items'>
      <view class='left'>
        <text class='iconfont icon-jiangbei '></text>
