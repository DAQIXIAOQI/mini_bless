@import "../../template/template.wxss" ;
.container {
  padding-bottom: 20rpx;
}

.box {
  margin-bottom: 20rpx;
}

.bless-box {
  width: 100vw;
  height: 55vw;
  position: relative;
  padding:  20rpx 0 ;
  background-color: white;
}
.bless-box .main {
  width: 100%;
  height: 100%;
  background-size: 100% 100%; 
}
.bless-box .main .bless{
    height:50%;
    overflow: hidden;
    position: absolute;
    width: 70%;
    left: 15%;
    top: 25%;
    display: flex;
    text-align: center;
    justify-content: center;
    align-items: center;
    text-shadow: 0 0 10px white;
}

.bless-box .rece-box {
   position: absolute;
   right:0;
   bottom: 0; 
}

.comment-box {
  padding: 30rpx 30rpx 15rpx;
  background-color: white;
  height: 370rpx;
}
.comment-box .comment {
  background-color: #fbf3e4;
  border: 2px solid #e9e9e9;
  height: 300rpx;
  border-radius: 10rpx;
  padding: 0 20rpx;
}
.comment-box .comment .text {
  color:#a1a09f;
  line-height: 70rpx;
  height: 70rpx;
}
.comment-box .comment .textarea-box {
  width: 100%;
  height: 215rpx;
}
.comment-box .comment .textarea-box textarea {
  width: 100%;
  height: 100%;
}
.comment-box .comment-options {
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 10rpx;
  font-size: 30rpx;
}
.comment-box .comment-options .option {
  margin-right: 50rpx;
   transition: all linear 0.2s;
}
.btn-box  {
  padding: 20rpx 0;
  position: relative;
  overflow: hidden;
}
.btn-box .btn{
   margin-right: 50rpx;
   text-shadow:0 0 10px white;
   font-size: 30rpx;
   float: right;
   width: 200rpx;
}
.options-box {
  background-color: white; 
 
}
.options-box .item {
  padding: 15rpx 5%;
}
.options-box .item .clear {
  clear: both;
}
.comment-list-box .comment-title {
  color: #8b8b8b;
  padding: 20rpx;
}
.comment-list-box .comment-item {
  border-bottom: 1px solid #e9e9e9;
}
.comment-list-box .comment-item:last-child {
  border-bottom-width: 0px;
}
.toggle-box {
   transform-origin: top center;
   padding-bottom: 50rpx;
}
.toggle-box.move {
   animation: rotate 3s ;
}
.option .icon-dianzan {
  display: inline-block;
  margin-right: 15rpx;
 
  font-size: 35rpx;
  transition: all  linear  200ms;
}
.option.liked {
  color:#f67f7f;text-shadow: 0 0 10rpx palevioletred;
}



 @keyframes rotate {
  0% {
        transform: rotateY(0deg) scale(1,1);
          opacity: 1;
  }
  50% {
     transform: rotateY(180deg) scale(0.5,0.5); 
   opacity:0; 
  }
  100% {
     transform: rotateY(360deg) scale(1,1); 
      opacity: 1;
  }
} 
